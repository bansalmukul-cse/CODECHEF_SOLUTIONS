#Problem Code: PENALTY

#include <bits/stdc++.h> //KarmeshDuggar
using namespace std;
#define ll long long

int main() 
{
	
    cin.tie(NULL);
    ios::sync_with_stdio(false);
    int t;
    cin>>t;
    while(t--)
    {
    	int a[10];
    for(int i=0;i<10;i++)
    cin>>a[i];
    int team1=0,team2=0;
    for(int i=0;i<10;i++)
    {
    	if(i%2==0)
    	team1+=a[i];
    	else
    	team2+=a[i];
	}
	if(team1>team2)
	cout<<"1";
	else if(team2>team1)
	cout<<"2";
	else
	cout<<"0";
	cout<<"\n";
	}

    return 0;
}
